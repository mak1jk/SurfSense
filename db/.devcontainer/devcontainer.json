{
    "name": "Podcastify Database Dev",
    "dockerComposeFile": [
        "../../../docker-compose.yml",
        "../../../docker-compose.dev.yml"
    ],
    "service": "db",
    "workspaceFolder": "/var/lib/postgresql/data",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ckolkman.vscode-postgres",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg"
            ],
            "settings": {
                "sqltools.connections": [
                    {
                        "name": "Container database",
                        "driver": "PostgreSQL",
                        "server": "localhost",
                        "port": 5432,
                        "database": "surfsense_db",
                        "username": "postgres",
                        "password": "postgres"
                    }
                ]
            }
        }
    },
    "forwardPorts": [5432],
    "remoteUser": "postgres"
}
